<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean class="org.springframework.xd.dirt.stream.StreamServer">
		<constructor-arg ref="streamDeployer"/>
	</bean>

	<bean id="streamDeployer" class="org.springframework.xd.dirt.stream.SimpleStreamDeployer">
		<constructor-arg>
			<bean class="org.springframework.xd.dirt.stream.DefaultStreamParser"/>
		</constructor-arg>
	</bean>
</beans>
