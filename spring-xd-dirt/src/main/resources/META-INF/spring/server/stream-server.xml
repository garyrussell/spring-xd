<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:int="http://www.springframework.org/schema/integration"
	xsi:schemaLocation="http://www.springframework.org/schema/integration http://www.springframework.org/schema/integration/spring-integration-3.0.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean class="org.springframework.xd.dirt.stream.StreamServer">
		<constructor-arg ref="streamDeployer" />
	</bean>

	<bean id="streamDeployer" class="org.springframework.xd.dirt.stream.QueuedStreamDeployer">
		<constructor-arg>
			<bean class="org.springframework.xd.dirt.stream.DefaultStreamParser" />
		</constructor-arg>
		<constructor-arg ref="moduleDeploymentRequestQueue" />
	</bean>

	<int:gateway id="moduleDeploymentRequestQueue"
		default-request-channel="deployQueueChannel" />

</beans>
